help () {
     echo "Usage: generate-random-password -c <character count>
Generate a random password from characters 'A-Za-z0-9.!@#$%*+'.

Options:
	-c    Number of characters (default: 24)

Examples:
	generate-random-password -c 10"
}

if [[ -z "$1" ]]; then
    CHAR_COUNT=24
elif [[ "$1" == "-c" ]]; then
    CHAR_COUNT=$2
else
    help
    exit
fi

echo "$(dd bs=512 if=/dev/urandom count=1 2>/dev/null | LC_ALL=C tr -dc 'A-Za-z0-9.!@#$%*+' | head -c $CHAR_COUNT)"